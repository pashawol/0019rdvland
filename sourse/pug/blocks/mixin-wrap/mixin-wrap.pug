mixin pic(bg, i,lazy, exp="jpg", media='576px')
	mixin source(i, exp, path , lazy)
		//- let path = 
		if lazy
			source(srcset="#" data-srcset=`img/@${path}/${i}.${exp}`  type=`image/${exp}` )&attributes(attributes) 
		else
			source(srcset=`img/@${path}/${i}.${exp}`  type=`image/${exp}` )&attributes(attributes) 
	mixin img(i, exp, path , lazy)
		if lazy
			img(src="#" data-src=`img/${path}/${i}.${exp}`, alt="")&attributes(attributes)  
		else
			img(src=`img/${path}/${i}.${exp}`, alt="")&attributes(attributes)
	// picture

	picture( class= lazy)&attributes(attributes) 
		if media !== 0  
			each val in ["webp",exp] 
				+source(i,val,`2x${ "/webp" || "" }`,lazy)(media=`(min-width: ${media} )`)
				// crop 2x
				+source(i,val,`1x${ "/webp" || "" }`,lazy) 
		else 
			+source(i,'webp',`2x/webp`,lazy) 
			// /webp images  
		if bg == 'bg'  
			+img(i, exp,"@2x", lazy)(class="object-fit-js")
		else 
			+img(i, exp,"@2x", lazy) 
	// /picture

		 
